# Open Accounting API Configuration
# Copy this file to .env and customize as needed
# Required variables are marked with (REQUIRED)

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string (REQUIRED)
# Format: postgres://user:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://user:password@localhost:5432/open_accounting?sslmode=disable

# =============================================================================
# SERVER
# =============================================================================

# HTTP server port (default: 8080)
PORT=8080

# Log level: trace, debug, info, warn, error, fatal, panic (default: info)
LOG_LEVEL=info

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT signing secret (REQUIRED for production)
# Generate with: openssl rand -base64 32
# WARNING: Default is insecure - always set in production!
JWT_SECRET=your-secure-secret-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
# Default: http://localhost:5173,http://localhost:3000
# Example: https://app.example.com,https://admin.example.com
ALLOWED_ORIGINS=http://localhost:5173

# Enable CORS debug logging (default: false)
# Set to "true" to enable
CORS_DEBUG=false

# =============================================================================
# SCHEDULER
# =============================================================================

# Enable recurring invoice scheduler (default: true)
# Set to "false" to disable
SCHEDULER_ENABLED=true

# Cron schedule for recurring invoice generation
# Default: "0 1 * * *" (1 AM daily)
# RECURRING_INVOICE_SCHEDULE=0 1 * * *

# =============================================================================
# DEMO MODE (Optional)
# =============================================================================

# Enable demo reset endpoint (default: false)
# Only enable in demo/staging environments, never in production!
DEMO_MODE=false

# Secret key for demo reset endpoint (required if DEMO_MODE=true)
# DEMO_RESET_SECRET=your-demo-secret-here
