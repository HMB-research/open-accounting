{
  "name": "open-accounting-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "overrides": {
    "cookie": "^1.0.0"
  },
  "scripts": {
    "paraglide": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide --strategy cookie localStorage preferredLanguage globalVariable baseLocale",
    "dev": "bun run paraglide && vite dev",
    "build": "bun run paraglide && vite build",
    "preview": "vite preview",
    "check": "bun run paraglide && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun run paraglide && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --config=playwright.demo.config.ts",
    "test:e2e:ui": "playwright test --config=playwright.demo.config.ts --ui",
    "test:e2e:debug": "playwright test --config=playwright.demo.config.ts --debug",
    "test:e2e:headed": "playwright test --config=playwright.demo.config.ts --headed",
    "test:e2e:verify": "playwright test --config=playwright.demo.config.ts e2e/demo/data-verification.spec.ts",
    "test:e2e:loop": "../scripts/test-loop.sh",
    "test:e2e:loop:verify": "../scripts/test-loop.sh 50 data-verification"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@inlang/paraglide-js": "^2.7.1",
    "chart.js": "^4.5.1",
    "decimal.js": "^10.4.3",
    "exceljs": "^4.4.0"
  }
}
